<h1 class="mb-5">イベント一覧</h1>

<div class="mb-5">
  <% if @events.present? %>
    <% @events.each do |event| %>
      <div class="mb-10 p-5 card bg-base-100 shadow-xl">
        <figure>
          <img
            src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
            alt="Shoes" />
        </figure>
        <div class="card-body">
          <h2 class="card-title">
            <%= event.name %>
            <div class="badge badge-secondary"><%= event.category %></div>
          </h2>
          <p>＠<%= event.place %></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>イベントないよ</p>
  <% end %>
</div>

<%= paginate @events %>
